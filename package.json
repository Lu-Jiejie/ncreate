{
  "name": "ncreate",
  "type": "module",
  "version": "0.0.9",
  "packageManager": "pnpm@10.28.0",
  "description": "Create your new project from a NPM, GitHub or local template with a single command.",
  "author": "Lu-Jiejie",
  "license": "MIT",
  "homepage": "https://github.com/Lu-Jiejie/ncreate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lu-Jiejie/ncreate.git"
  },
  "bugs": "https://github.com/Lu-Jiejie/ncreate/issues",
  "keywords": [
    "cli",
    "create",
    "NPM"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.mjs",
    "./runner": "./dist/runner.mjs",
    "./package.json": "./package.json"
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "./dist/*",
        "./dist/index.d.ts"
      ]
    }
  },
  "bin": {
    "ncreate": "./bin/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "lint": "eslint .",
    "release": "bumpp",
    "start": "tsx src/index.ts",
    "cli": "tsx src/runner.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^7.0.1",
    "@types/minimist": "^1.2.5",
    "@types/node": "^24.10.8",
    "bumpp": "^10.4.0",
    "eslint": "^9.39.2",
    "execa": "^9.6.1",
    "gitignore-to-minimatch": "^0.0.2",
    "https-proxy-agent": "^7.0.6",
    "lint-staged": "^16.2.7",
    "minimatch": "^10.1.1",
    "minimist": "^1.2.8",
    "picocolors": "^1.1.1",
    "prompts-plus": "^3.0.4",
    "simple-git-hooks": "^2.13.1",
    "tar": "^7.5.2",
    "tsdown": "^0.19.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
